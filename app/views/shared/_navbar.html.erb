<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to root_path, class:'nav-link' do %>
            <p class="<%= 'nav-active' if request.fullpath == '/' %>">Home</p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to games_path, class:'nav-link' do %>
            <p class="<%= 'nav-active' if request.fullpath == '/games' %>">Search for playboards</p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to dashboard_path, class:'nav-link' do %>
            <p class="<%= 'nav-active' if request.fullpath == '/dashboard' %>">Dashboard</p>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <% if user_signed_in? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <i class="fas fa-user-circle" style="font-size:35px" data-toggle="dropdown"></i>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            <% end %>
          </div>
        </li>
      </ul>
  </div>
</div>
